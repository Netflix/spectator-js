{
  "name": "nflx-spectator",
  "version": "3.0.0-rc.5",
  "license": "Apache-2.0",
  "homepage": "https://github.com/Netflix/spectator-js",
  "author": "Netflix Telemetry Engineering <netflix-atlas@googlegroups.com>",
  "type": "module",
  "main": "cjs/src/index.js",
  "types": "esm/src/index.d.ts",
  "exports": {
    "import": "./esm/src/index.js",
    "require": "./cjs/src/index.js"
  },
  "files": [
    "esm/src/**/*",
    "cjs/src/**/*.js"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.9.1",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "eslint": "^9.22.0",
    "mocha": "^10.8.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "clean": "rm -rf cjs coverage esm",
    "build": "tsc --module commonjs --outDir cjs; tsc --module es2022 --outDir esm",
    "build-and-test": "npm run build; npm run test",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "test": "mocha 'esm/test/**/*.test.js'",
    "test-with-coverage": "c8 mocha --reporter min 'esm/test/**/*.test.js'",
    "check-coverage": "c8 check-coverage --lines 90 mocha 'esm/test/**/*.test.js'"
  }
}
